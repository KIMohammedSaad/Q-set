@{
}
@model ProductSearchViewModel

<form asp-controller="Product" asp-action="Search" method="post">
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" class="form-control" asp-for="ProductName" />
    </div>
    <div class="form-group">
        <label>Size</label>
        <input type="text" class="form-control" asp-for="Size" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label>Manufacturing Date</label>
        <input type="date" class="form-control" asp-for="MfgDate" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input type="text" class="form-control" asp-for="Category" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary">Clear</a>
</form>
