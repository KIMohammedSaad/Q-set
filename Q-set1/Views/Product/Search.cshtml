@{
}
@model List<Product>

<h2>Search Results</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Size</th>
            <th>Price</th>
            <th>Manufacturing Date</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Size</td>
                <td>@product.Price</td>
                <td>@product.MfgDate.ToString("yyyy-MM-dd")</td>
                <td>@product.Category</td>
            </tr>
        }
    </tbody>
</table>

